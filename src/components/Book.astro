---
const { title, author, rating, thoughts, recommend, coverImgSrc } = Astro.props;
import CrtImage from "./CrtImage.astro";
---

<article class="book">
  <div>
    <div class="book-header">
      <h3 class="book-title">{title}</h3>
      <p class="book-author">By {author}</p>
    </div>
    {rating !== undefined && <p class="book-rating">Rating: {rating}/5</p>}

    {thoughts && <p>Thoughts: {thoughts}</p>}

    {recommend && <span class="book-recommend">Recommended</span>}
  </div>
  {
    coverImgSrc && (
      <CrtImage
        width=100
        height=140
        src={coverImgSrc}
        alt="Book cover"
      />
    )
  }
</article>

<style>
  .book {
    padding: 12px 0;
    display: flex;
    justify-content: space-between;
    gap: 30px;
    margin-inline: 10px;
  }

  .book-header {
    line-height: 1.2;
  }

  .book-title {
    margin: 0;
  }

  .book-author {
    margin: 0;
    opacity: 0.6;
    font-size: 0.9rem;
  }

  .book-thoughts {
    font-style: italic;
    opacity: 0.85;
  }

  .book-recommend {
    color: #37e64b;
  }
</style>
